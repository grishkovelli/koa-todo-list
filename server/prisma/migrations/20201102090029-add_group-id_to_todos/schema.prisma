generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

enum Color {
  none
  red
  blue
  green
  gold
}

model Todo {
  @@map(name: "todos")

  id        Int     @default(autoincrement()) @id
  title     String
  completed Boolean @default(false)
  color     Color   @default(none)
  groupId   Int?
  createdAt DateTime @default(now())
}

model Group {
  @@map(name: "groups")
  id Int @default(autoincrement()) @id
  title String
}
